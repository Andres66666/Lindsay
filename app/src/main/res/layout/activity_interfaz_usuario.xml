<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".InterfaceUsurious">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.6"
            android:scaleType="centerCrop"
            android:src="@drawable/fondo22" />
    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.7" />
    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.57"/>
    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline222"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.85"/>


    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />


    <ImageView
            android:id="@+id/imageView"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginTop="80dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

    <pl.droidsonroids.gif.GifImageButton
            android:id="@+id/btnCamera"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="camera"
            android:src="@drawable/camara_1"
            android:scaleType="centerInside"
            android:backgroundTint="@color/transparentColor"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline2"/>

    <pl.droidsonroids.gif.GifImageButton
            android:id="@+id/btnGallery"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="Gallery"
            android:src="@drawable/galeria_1"
            android:scaleType="centerInside"
            android:backgroundTint="@color/transparentColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toTopOf="@+id/guideline2" />

    <pl.droidsonroids.gif.GifImageButton
            android:id="@+id/btnGUARDAR"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="GUARDAR"
            android:src="@drawable/guardar_1"
            android:scaleType="centerInside"
            android:backgroundTint="@color/transparentColor"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline222"/>
    <pl.droidsonroids.gif.GifImageButton
            android:id="@+id/btnREGRESAR"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="VOLVER"
            android:src="@drawable/volver"
            android:scaleType="centerInside"
            android:backgroundTint="@color/transparentColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toTopOf="@+id/guideline222"/>
    <pl.droidsonroids.gif.GifImageButton
            android:id="@+id/btnfiltros"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="filtro"
            android:src="@drawable/filtro"
            android:scaleType="centerInside"
            android:backgroundTint="@color/transparentColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toTopOf="@+id/guideline22"/>


</androidx.constraintlayout.widget.ConstraintLayout>